                <item name="childDefaults" xsi:type="array">
                    <item name="provider" xsi:type="string">purchaseorder_create_itemgrid.purchaseorder_create_itemgrid.listing_top.listing_filters</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">purchaseorder_create_itemgrid.purchaseorder_create_itemgrid.purchaseorder_create_grid_columns.${ $.index }:visible</item>
                    </item>
                </item>
            </item>
        </argument>
