                        <item name="provider" xsi:type="string">purchaseorder_create_itemgrid.purchaseorder_create_itemgrid.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider" xsi:type="string">purchaseorder_create_itemgrid.purchaseorder_create_itemgrid.purchaseorder_create_grid_columns.id</item>
                </item>
            </argument>
   </paging>
    <filters name="listing_filters">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="columnsProvider" xsi:type="string">purchaseorder_create_itemgrid.purchaseorder_create_itemgrid.purchaseorder_create_grid_columns</item>
