                                    <label class="tax_percent">
                                        + <?= $block->escapeHtml(__('Tax')) ?>
                                        <input type="text"
                                               name="shipping_method[<?= $block->escapeHtmlAttr($_code) ?>][tax_percent]"
                                               value="<?= $block->escapeHtmlAttr(number_format($pricePercent, 2, '.', '')); ?>"
