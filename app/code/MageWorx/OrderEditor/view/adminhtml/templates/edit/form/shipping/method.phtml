                                                    <?= /* @noEscape */ $block->renderTaxRatesOptions(); ?>
                                                </select>
                                            </label>
                                        </div>
                                    </label>
                                    <input type="hidden"
                                           name="shipping_method[<?= $block->escapeHtmlAttr($_code) ?>][description]"
                                           value="<?= $block->escapeHtmlAttr($block->getCarrierName($code)) ?> - <?= $block->escapeHtmlAttr($methodTitle) ?>"/>
                                </div>
                            </label>
                        <?php endif ?>
                    </li>
                <?php endforeach; ?>
                </ul>
            </dd>
        <?php endforeach; ?>
        </dl>
    </div>
