<?php if ($block->canShowAnalytics()) : ?>
    <!-- Google Analytics Added by Mageplaza -->
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=<?= $block->getTagId(); ?>"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('set', {'currency': '<?= $block->getCurrency(); ?>'});
        gtag('set', {'link_attribution': <?= $block->isLinkAttribution();?>});
        gtag('set', {'anonymize_ip': <?= $block->isAnonymizeIp();?>});
        gtag('set', {'allow_ad_personalization_signals': <?= $block->isDisplayFeatures();?>});
        <?php if ($block->isLinker()) :?>
        gtag('set', {'linker': {'domains':<?= $block->getLinkerDomains();?>}});
        <?php endif; ?>
        gtag('config', '<?= $block->getTagId();?>');
        <?php if (!empty($block->getSubTagId())) :?>
        //Second tag id
        gtag('config', '<?= $block->getSubTagId();?>');
        <?php endif; ?>
    </script>
    <!-- End Google Analytics -->
<?php endif; ?>
