/** @var \Mageplaza\GoogleTagManager\Block\TagManager $block */
?>
<!--Google Tag Manager: dataLayer - Added by Mageplaza-->
<?php
if (!empty($block->getEventCartData())) {
    $data = $block->getEventCartData();
    if (!empty($data['add']['gtm'])) {
        ?>
        <script>dataLayer.push(<?= /** @noEscape */ $data['add']['gtm'] ?>);</script>
        <?php
    }
    if (!empty($data['add']['pixel'])) {
        ?>
        <script>fbq('track', 'AddToCart', <?= /** @noEscape */  $data['add']['pixel'] ?>);</script>
        <?php
    }
    if (!empty($data['add']['ga'])) {
        ?>
        <script>gtag('event', 'add_to_cart', <?= /** @noEscape */  $data['add']['ga'] ?>);</script>
        <?php
    }
    $block->removeAddToCartData();
    if (!empty($data['remove']['gtm'])) {
        ?>
        <script>dataLayer.push(<?= /** @noEscape */  $data['remove']['gtm'] ?>);</script>
        <?php
    }
    if (!empty($data['remove']['ga'])) {
        ?>
        <script>gtag('event', 'remove_from_cart', <?= /** @noEscape */  $data['remove']['ga'] ?>);</script>
        <?php
    }
    $block->removeRemoveFromCartData();
}
?>
